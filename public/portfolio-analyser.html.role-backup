    <script>
        const API_URL = '/api/supabase-proxy';

        // Load portfolio data
        async function loadPortfolioData() {
            try {
                // Simulate portfolio data - in real implementation, fetch from API
                const portfolioData = {
                    totalValue: 2500000,
                    dailyPnL: 15750,
                    totalReturn: 0.127,
                    sharpeRatio: 1.42,
                    maxDrawdown: -0.087,
                    volatility: 0.156,
                    beta: 1.15,
                    alpha: 0.032,
                    var95: -47500
                };

                document.getElementById('totalValue').textContent = '$' + portfolioData.totalValue.toLocaleString();
                
                const dailyPnL = document.getElementById('dailyPnL');
                dailyPnL.textContent = (portfolioData.dailyPnL >= 0 ? '+$' : '-$') + Math.abs(portfolioData.dailyPnL).toLocaleString();
                dailyPnL.className = 'metric-value ' + (portfolioData.dailyPnL >= 0 ? 'positive' : 'negative');
                
                const totalReturn = document.getElementById('totalReturn');
                totalReturn.textContent = (portfolioData.totalReturn * 100).toFixed(2) + '%';
                totalReturn.className = 'metric-value ' + (portfolioData.totalReturn >= 0 ? 'positive' : 'negative');
                
                document.getElementById('sharpeRatio').textContent = portfolioData.sharpeRatio.toFixed(2);
                document.getElementById('maxDrawdown').textContent = (portfolioData.maxDrawdown * 100).toFixed(2) + '%';
                document.getElementById('volatility').textContent = (portfolioData.volatility * 100).toFixed(2) + '%';
                
                document.getElementById('beta').textContent = portfolioData.beta.toFixed(2);
                document.getElementById('alpha').textContent = (portfolioData.alpha * 100).toFixed(2) + '%';
                document.getElementById('var95').textContent = '$' + Math.abs(portfolioData.var95).toLocaleString();

                // Load holdings data
                loadHoldingsData();

            } catch (error) {
                console.error('Failed to load portfolio data:', error);
            }
        }

        async function loadHoldingsData() {
            const holdings = [
                { asset: 'AAPL', weight: 15.2, value: 380000, pnl: 2340, return: 0.062 },
                { asset: 'MSFT', weight: 12.8, value: 320000, pnl: 1890, return: 0.059 },
                { asset: 'GOOGL', weight: 10.5, value: 262500, pnl: -1250, return: -0.047 },
                { asset: 'AMZN', weight: 9.3, value: 232500, pnl: 3210, return: 0.140 },
                { asset: 'TSLA', weight: 7.8, value: 195000, pnl: -890, return: -0.045 }
            ];

            const tbody = document.getElementById('holdingsTableBody');
            tbody.innerHTML = '';
            
            holdings.forEach(holding => {
                const row = tbody.insertRow();
                row.innerHTML = `
                    <td><strong>${holding.asset}</strong></td>
                    <td>${holding.weight.toFixed(1)}%</td>
                    <td>$${holding.value.toLocaleString()}</td>
                    <td class="${holding.pnl >= 0 ? 'bp3-text-intent-success' : 'bp3-text-intent-danger'}">
                        ${holding.pnl >= 0 ? '+' : ''}$${holding.pnl.toLocaleString()}
                    </td>
                    <td class="${holding.return >= 0 ? 'bp3-text-intent-success' : 'bp3-text-intent-danger'}">
                        ${(holding.return * 100).toFixed(2)}%
                    </td>
                `;
            });
        }

        function refreshPortfolio() {
            // Show loading states
            document.querySelectorAll('.metric-value').forEach(el => {
                el.innerHTML = '<span class="bp3-skeleton">Loading...</span>';
            });
            
            // Reload data
            setTimeout(loadPortfolioData, 1000);
        }

