/* Universal Jony Ive-inspired header styles */
/* These styles are designed to override any existing page styles */

/* Header styles with high specificity */
.jony-ive-header {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    height: 48px !important;
    background: rgba(255, 255, 255, 0.72) !important;
    backdrop-filter: blur(20px) !important;
    -webkit-backdrop-filter: blur(20px) !important;
    border-bottom: 0.5px solid rgba(0, 0, 0, 0.08) !important;
    z-index: 10000 !important;
    transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1) !important;
    font-family: -apple-system, BlinkMacSystemFont, "SF Pro Display", "SF Pro Text", "Helvetica Neue", sans-serif !important;
}

/* Dark theme support */
body.dark-theme .jony-ive-header {
    background: rgba(28, 28, 30, 0.72) !important;
    border-bottom-color: rgba(255, 255, 255, 0.08) !important;
}

/* Scrolled state */
.jony-ive-header.scrolled {
    background: rgba(255, 255, 255, 0.85) !important;
    box-shadow: 0 1px 10px rgba(0, 0, 0, 0.05) !important;
}

body.dark-theme .jony-ive-header.scrolled {
    background: rgba(28, 28, 30, 0.85) !important;
    box-shadow: 0 1px 10px rgba(0, 0, 0, 0.2) !important;
}

/* Container */
.jony-ive-header .header-container {
    display: flex !important;
    align-items: center !important;
    justify-content: space-between !important;
    height: 100% !important;
    padding: 0 20px !important;
    max-width: 1200px !important;
    margin: 0 auto !important;
}

/* Left section */
.jony-ive-header .header-left {
    display: flex !important;
    align-items: center !important;
}

.jony-ive-header .header-logo {
    display: flex !important;
    align-items: center !important;
    gap: 10px !important;
    text-decoration: none !important;
    color: rgba(0, 0, 0, 0.88) !important;
    font-weight: 500 !important;
    font-size: 15px !important;
    letter-spacing: -0.01em !important;
    transition: all 0.2s ease !important;
}

body.dark-theme .jony-ive-header .header-logo {
    color: rgba(255, 255, 255, 0.88) !important;
}

.jony-ive-header .logo-icon {
    font-size: 20px !important;
    line-height: 1 !important;
    opacity: 0.9 !important;
}

.jony-ive-header .header-logo:hover {
    opacity: 0.7 !important;
}

/* Center section */
.jony-ive-header .header-center {
    display: flex !important;
    align-items: center !important;
}

.jony-ive-header .status-indicator {
    display: flex !important;
    align-items: center !important;
    gap: 8px !important;
    padding: 6px 12px !important;
    background: rgba(52, 199, 89, 0.1) !important;
    border-radius: 20px !important;
    transition: all 0.2s ease !important;
}

.jony-ive-header .status-dot {
    width: 6px !important;
    height: 6px !important;
    background: #34C759 !important;
    border-radius: 50% !important;
    animation: pulse-dot 2s ease-in-out infinite !important;
}

.jony-ive-header .status-text {
    font-size: 12px !important;
    font-weight: 500 !important;
    color: #34C759 !important;
    letter-spacing: -0.01em !important;
}

/* Right section */
.jony-ive-header .header-right {
    display: flex !important;
    align-items: center !important;
    gap: 8px !important;
}

.jony-ive-header .header-icon-btn {
    width: 32px !important;
    height: 32px !important;
    border-radius: 50% !important;
    border: none !important;
    background: transparent !important;
    color: rgba(0, 0, 0, 0.6) !important;
    cursor: pointer !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    transition: all 0.2s ease !important;
    padding: 0 !important;
}

body.dark-theme .jony-ive-header .header-icon-btn {
    color: rgba(255, 255, 255, 0.6) !important;
}

.jony-ive-header .header-icon-btn:hover {
    background: rgba(0, 0, 0, 0.05) !important;
    color: rgba(0, 0, 0, 0.88) !important;
}

body.dark-theme .jony-ive-header .header-icon-btn:hover {
    background: rgba(255, 255, 255, 0.05) !important;
    color: rgba(255, 255, 255, 0.88) !important;
}

.jony-ive-header .header-icon-btn:active {
    transform: scale(0.92) !important;
}

/* Loading indicator */
.header-loading {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    height: 1px !important;
    background: transparent !important;
    z-index: 10001 !important;
    pointer-events: none !important;
}

.header-loading.active::after {
    content: '' !important;
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    height: 100% !important;
    width: 30% !important;
    background: linear-gradient(90deg, transparent, #007AFF, transparent) !important;
    animation: loading-sweep 1.5s ease-in-out infinite !important;
}

/* Animations */
@keyframes pulse-dot {
    0%, 100% {
        transform: scale(1);
        opacity: 1;
    }
    50% {
        transform: scale(1.1);
        opacity: 0.8;
    }
}

@keyframes loading-sweep {
    0% {
        transform: translateX(-100%);
    }
    100% {
        transform: translateX(400%);
    }
}

/* Override any existing header styles */
.header,
.nav-bar,
.navbar,
.app-header,
.site-header {
    display: none !important;
}

/* Ensure our header is always visible */
.jony-ive-header * {
    box-sizing: border-box !important;
}

/* Responsive adjustments */
@media (max-width: 640px) {
    .jony-ive-header .logo-text {
        display: none !important;
    }
    
    .jony-ive-header .status-text {
        display: none !important;
    }
    
    .jony-ive-header .header-container {
        padding: 0 16px !important;
    }
}