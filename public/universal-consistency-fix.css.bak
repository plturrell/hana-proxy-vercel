/* 
 * Universal Consistency Fix - 99% Quality Assurance
 * Ensures every page behaves identically
 */

/* ========================================
   FORCED VISIBILITY FOR ALL HEADERS
   ======================================== */

/* Force header visibility on all pages */
.bp3-navbar,
.bp3-navbar.bp3-dark,
.bp3-app .bp3-navbar {
    display: flex !important;
    visibility: visible !important;
    opacity: 1 !important;
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    z-index: 1000 !important;
    height: 48px !important;
}

/* Force navbar groups visibility */
.bp3-navbar-group,
.bp3-navbar-group.bp3-align-left,
.bp3-navbar-group.bp3-align-right {
    display: flex !important;
    visibility: visible !important;
    opacity: 1 !important;
    height: 48px !important;
    align-items: center !important;
}

/* Force button visibility */
.bp3-navbar .bp3-button,
.bp3-navbar button {
    display: flex !important;
    visibility: visible !important;
    opacity: 1 !important;
    align-items: center !important;
    justify-content: center !important;
}

/* Force text visibility in buttons */
.bp3-navbar .bp3-button span,
.bp3-navbar button span {
    visibility: visible !important;
    opacity: 1 !important;
    display: inline-block !important;
}

/* Force icon visibility */
.bp3-navbar .bp3-icon,
.bp3-sidebar .bp3-icon,
.bp3-menu-item .bp3-icon {
    visibility: visible !important;
    opacity: 1 !important;
    display: inline-block !important;
    font-size: 16px !important;
    width: 16px !important;
    height: 16px !important;
    line-height: 1 !important;
    vertical-align: middle !important;
}

/* Fix Blueprint icon font loading */
.bp3-icon {
    font-family: "blueprint-icons-16" !important;
    font-style: normal !important;
    font-weight: normal !important;
    font-size: 16px !important;
    display: inline-block !important;
    visibility: visible !important;
    opacity: 1 !important;
    line-height: 1 !important;
    -webkit-font-smoothing: antialiased !important;
    -moz-osx-font-smoothing: grayscale !important;
    speak: none !important;
    text-transform: none !important;
    white-space: nowrap !important;
    word-wrap: normal !important;
    -webkit-font-feature-settings: "liga" !important;
    font-feature-settings: "liga" !important;
    letter-spacing: normal !important;
}

/* Blueprint icons use Unicode through CSS content */
.bp3-icon::before,
.bp3-icon-standard::before,
.bp3-icon-large::before {
    font-family: inherit !important;
}

/* Large icons use 20px font */
.bp3-icon-large {
    font-family: "blueprint-icons-20" !important;
    font-size: 20px !important;
}

/* Ensure icon fonts are loaded - Blueprint 4.x with correct absolute paths */
@font-face {
    font-family: "blueprint-icons-16";
    src: url("https://unpkg.com/@blueprintjs/icons@4.16.0/lib/css/blueprint-icons-16.ttf") format("truetype"),
         url("https://unpkg.com/@blueprintjs/icons@4.16.0/lib/css/blueprint-icons-16.eot#iefix") format("embedded-opentype"),
         url("https://unpkg.com/@blueprintjs/icons@4.16.0/lib/css/blueprint-icons-16.woff2") format("woff2"),
         url("https://unpkg.com/@blueprintjs/icons@4.16.0/lib/css/blueprint-icons-16.woff") format("woff");
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: "blueprint-icons-20";
    src: url("https://unpkg.com/@blueprintjs/icons@4.16.0/lib/css/blueprint-icons-20.ttf") format("truetype"),
         url("https://unpkg.com/@blueprintjs/icons@4.16.0/lib/css/blueprint-icons-20.eot#iefix") format("embedded-opentype"),
         url("https://unpkg.com/@blueprintjs/icons@4.16.0/lib/css/blueprint-icons-20.woff2") format("woff2"),
         url("https://unpkg.com/@blueprintjs/icons@4.16.0/lib/css/blueprint-icons-20.woff") format("woff");
    font-weight: normal;
    font-style: normal;
}

/* ========================================
   STANDARDIZED BUTTON STRUCTURE
   ======================================== */

/* Ensure all header buttons have consistent styling */
.bp3-navbar .bp3-button {
    padding: 6px 12px !important;
    border-radius: 6px !important;
    border: none !important;
    background: transparent !important;
    cursor: pointer !important;
    transition: all 0.2s ease !important;
    min-height: 32px !important;
    gap: 6px !important;
}

/* Button text styling */
.bp3-navbar .bp3-button > span:not(.bp3-icon) {
    font-size: 13px !important;
    font-weight: 500 !important;
    margin-left: 6px !important;
}

/* Icon spacing in buttons */
.bp3-navbar .bp3-button .bp3-icon {
    margin-right: 6px !important;
    font-size: 16px !important;
}

/* ========================================
   SIDEBAR CONSISTENCY
   ======================================== */

/* Force specific sidebar icon visibility */
.bp3-menu-item .bp3-icon::before,
.bp3-navbar .bp3-icon::before {
    visibility: visible !important;
    opacity: 1 !important;
}

/* Debug - Force visible content if fonts fail */
.bp3-icon:empty::before {
    content: "?" !important;
    font-family: inherit !important;
}

/* Ensure all Blueprint icon spans are treated as icon fonts */
span[class*="bp3-icon-"] {
    font-family: "blueprint-icons-16" !important;
}

span[class*="bp3-icon-"].bp3-icon-large {
    font-family: "blueprint-icons-20" !important;
}

/* Force sidebar visibility and structure */
.bp3-sidebar {
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
    width: 280px !important;
    position: relative !important;
}

/* Force menu item visibility */
.bp3-menu-item,
.bp3-menu-item span {
    visibility: visible !important;
    opacity: 1 !important;
    display: flex !important;
}

/* Ensure menu text is visible */
.bp3-menu-item .bp3-text-overflow-ellipsis {
    color: inherit !important;
    opacity: 0.88 !important;
    visibility: visible !important;
}

/* ========================================
   METRIC CARD CONSISTENCY
   ======================================== */

/* Standardize all metric card containers */
.apple-data-grid {
    display: grid !important;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)) !important;
    gap: 16px !important;
    margin-bottom: 30px !important;
}

/* Ensure metric cards are consistent */
.apple-metric-card {
    display: flex !important;
    flex-direction: column !important;
    visibility: visible !important;
    opacity: 1 !important;
    min-height: 120px !important;
    padding: 24px !important;
}

/* Metric card text visibility */
.apple-metric-label,
.apple-metric-value,
.apple-metric-change {
    visibility: visible !important;
    opacity: 1 !important;
    display: block !important;
}

/* ========================================
   CONTENT AREA CONSISTENCY
   ======================================== */

/* Ensure main content is properly positioned */
.main-content,
.slate-content-primary {
    margin-top: 48px !important;
    padding: 30px !important;
    display: block !important;
    visibility: visible !important;
}

/* Ensure app layout consistency */
.bp3-app {
    display: flex !important;
    flex-direction: column !important;
    height: 100vh !important;
}

.app-content {
    display: flex !important;
    flex: 1 !important;
    margin-top: 48px !important;
}

/* ========================================
   INTERACTION STATE FIXES
   ======================================== */

/* Ensure hover states work */
.bp3-navbar .bp3-button:hover {
    background: rgba(0, 0, 0, 0.04) !important;
    transform: none !important;
}

.bp3-dark .bp3-navbar .bp3-button:hover {
    background: rgba(255, 255, 255, 0.08) !important;
}

/* Ensure active states work */
.bp3-navbar .bp3-button:active {
    transform: scale(0.96) !important;
}

/* ========================================
   THEME CONSISTENCY
   ======================================== */

/* Light theme header */
.bp3-navbar {
    background: rgba(255, 255, 255, 0.72) !important;
    backdrop-filter: blur(20px) !important;
    -webkit-backdrop-filter: blur(20px) !important;
    border-bottom: 0.5px solid rgba(0, 0, 0, 0.08) !important;
}

/* Dark theme header */
.bp3-dark .bp3-navbar {
    background: rgba(18, 18, 18, 0.72) !important;
    border-bottom: 0.5px solid rgba(255, 255, 255, 0.08) !important;
}

/* ========================================
   MOBILE RESPONSIVENESS
   ======================================== */

@media (max-width: 768px) {
    .apple-data-grid {
        grid-template-columns: 1fr !important;
        gap: 12px !important;
    }
    
    .bp3-navbar .bp3-button {
        padding: 4px 8px !important;
        font-size: 12px !important;
    }
    
    .bp3-navbar .bp3-button > span:not(.bp3-icon) {
        font-size: 11px !important;
    }
}

/* ========================================
   EMERGENCY OVERRIDES
   ======================================== */

/* If anything is still hidden, force it visible */
.bp3-navbar *,
.bp3-navbar-group *,
.bp3-button * {
    visibility: visible !important;
    opacity: 1 !important;
}

/* Ensure no elements are accidentally hidden */
[style*="display: none"]:not(.technology-only):not(.admin-only) {
    display: block !important;
}

/* Force glassmorphism effects */
.apple-metric-card,
.bp3-navbar {
    backdrop-filter: blur(8px) !important;
    -webkit-backdrop-filter: blur(8px) !important;
}

/* ========================================
   TYPOGRAPHY CONSISTENCY
   ======================================== */

/* Ensure consistent font family */
.bp3-navbar,
.bp3-navbar *,
.apple-metric-card,
.apple-metric-card * {
    font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', Inter, 'Segoe UI', Roboto, sans-serif !important;
}

/* Ensure consistent font weights */
.apple-metric-value {
    font-weight: 700 !important;
    font-size: 2rem !important;
}

.apple-metric-label {
    font-weight: 500 !important;
    font-size: 0.875rem !important;
    text-transform: uppercase !important;
    letter-spacing: 0.5px !important;
}