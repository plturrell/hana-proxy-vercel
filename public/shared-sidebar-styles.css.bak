/* 
 * Jony Ive-inspired Sidebar Design
 * Harmonized with Glassmorphism Header
 * "Simplicity is the ultimate sophistication"
 */

/* Sidebar Foundation - Temporarily disabled glassmorphism for visibility */
.bp3-sidebar {
    width: 280px;
    flex-shrink: 0;
    background: var(--bp3-light-gray5);
    /* backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px); */
    border-right: 1px solid var(--bp3-divider-color);
    overflow-y: auto;
    overflow-x: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.bp3-dark .bp3-sidebar {
    background: var(--bp3-dark-gray3);
    border-right: 1px solid rgba(255, 255, 255, 0.15);
}

/* Scrollbar - Minimal like header elements */
.bp3-sidebar::-webkit-scrollbar {
    width: 6px;
}

.bp3-sidebar::-webkit-scrollbar-track {
    background: transparent;
}

.bp3-sidebar::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.1);
    border-radius: 3px;
}

.bp3-dark .bp3-sidebar::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
}

/* Menu Structure */
.bp3-menu {
    padding: 12px 0;
    list-style: none;
    margin: 0;
}

/* Ensure menu items in lists are visible */
.bp3-menu li {
    list-style: none;
    margin: 0;
    padding: 0;
}

/* Section Headers - Matching header's refined typography */
.bp3-menu-header {
    padding: 16px 24px 8px 24px;
}

.bp3-menu-header .bp3-heading {
    font-size: 11px;
    font-weight: 500;
    letter-spacing: 0.01em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.48);
    margin: 0;
}

.bp3-dark .bp3-menu-header .bp3-heading {
    color: rgba(255, 255, 255, 0.48);
}

/* Menu Dividers - Hairline like header border */
.bp3-menu-divider {
    height: 0.5px;
    background: rgba(0, 0, 0, 0.08);
    margin: 12px 0;
    border: none;
}

.bp3-dark .bp3-menu-divider {
    background: rgba(255, 255, 255, 0.08);
}

/* Menu Items - Matching header button style */
.bp3-menu-item {
    display: flex;
    align-items: center;
    padding: 8px 24px;
    margin: 0 8px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 400;
    letter-spacing: -0.01em;
    color: rgba(0, 0, 0, 0.88);
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
}

.bp3-dark .bp3-menu-item {
    color: rgba(255, 255, 255, 0.88);
}

/* Hover State - Like header buttons */
.bp3-menu-item:hover {
    background: rgba(0, 0, 0, 0.04);
    color: rgba(0, 0, 0, 0.88);
}

.bp3-dark .bp3-menu-item:hover {
    background: rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.88);
}

/* Active State - iOS-style selection */
.bp3-menu-item.bp3-active {
    background: rgba(0, 125, 250, 0.12);
    color: #007AFF;
    font-weight: 500;
}

.bp3-dark .bp3-menu-item.bp3-active {
    background: rgba(10, 132, 255, 0.16);
    color: #0A84FF;
}

/* Active Indicator Bar */
.bp3-menu-item.bp3-active::before {
    content: '';
    position: absolute;
    left: 8px;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 16px;
    background: #007AFF;
    border-radius: 1.5px;
}

.bp3-dark .bp3-menu-item.bp3-active::before {
    background: #0A84FF;
}

/* Icons - Consistent with header */
.bp3-menu-item .bp3-icon {
    font-size: 16px;
    margin-right: 12px;
    transition: all 0.2s ease;
    flex-shrink: 0;
    color: inherit;
}

.bp3-menu-item.bp3-active .bp3-icon {
    color: #007AFF;
}

.bp3-dark .bp3-menu-item.bp3-active .bp3-icon {
    color: #0A84FF;
}

/* Text */
.bp3-menu-item .bp3-text-overflow-ellipsis {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: block;
}

/* Pressed State - Matching header button behavior */
.bp3-menu-item:active {
    transform: scale(0.96);
    background: rgba(0, 0, 0, 0.08);
}

.bp3-dark .bp3-menu-item:active {
    background: rgba(255, 255, 255, 0.12);
}

/* Focus State - Accessibility */
.bp3-menu-item:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(0, 125, 250, 0.6);
}

.bp3-dark .bp3-menu-item:focus {
    box-shadow: 0 0 0 2px rgba(100, 210, 255, 0.6);
}

/* Sidebar Shadow - Subtle depth */
.bp3-sidebar::after {
    content: '';
    position: absolute;
    top: 0;
    right: -1px;
    bottom: 0;
    width: 1px;
    background: linear-gradient(to bottom, 
        rgba(0, 0, 0, 0.08), 
        rgba(0, 0, 0, 0.04)
    );
    pointer-events: none;
}

.bp3-dark .bp3-sidebar::after {
    background: linear-gradient(to bottom, 
        rgba(255, 255, 255, 0.08), 
        rgba(255, 255, 255, 0.04)
    );
}

