/* High-Resolution Display Optimizations */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    .bp3-sidebar {
        border-right-width: 0.5px;
    }
    
    .bp3-menu-divider {
        height: 0.5px;
    }
}

/* Collapsed State Support */
.bp3-sidebar.collapsed {
    width: 64px;
}

.bp3-sidebar.collapsed .bp3-menu-item .bp3-text-overflow-ellipsis,
.bp3-sidebar.collapsed .bp3-menu-header {
    opacity: 0;
    visibility: hidden;
}

.bp3-sidebar.collapsed .bp3-menu-item {
    justify-content: center;
    padding: 8px;
}

.bp3-sidebar.collapsed .bp3-menu-item .bp3-icon {
    margin-right: 0;
}